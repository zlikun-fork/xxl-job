FROM java:8-alpine

MAINTAINER zlikun <https://zlikun.com>

ENV MYSQL_HOST mysql
ENV MYSQL_PORT 3306
ENV MYSQL_USERNAME root
ENV MYSQL_PASSWORD 123456
ENV EMAIL_HOST smtp.qiye.163.com
ENV EMAIL_PORT 25
ENV EMAIL_SSL false
ENV EMAIL_USERNAME ""
ENV EMAIL_PASSWORD ""
ENV EMAIL_SENDER XXL-JOB
ENV LOGIN_USERNAME admin
ENV LOGIN_PASSWORD 123456
ENV ACCESS_TOKEN ""

ADD xxl-job-admin-2.0.0.jar /opt/app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "/opt/app.jar"]


